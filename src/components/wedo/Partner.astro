---
const partner_1 = "/src/assets/about/partner_1.png";
const partner_2 = "/src/assets/about/partner_2.png";
const partner_3 = "/src/assets/about/partner_3.png";
const partner_4 = "/src/assets/about/partner_4.png";
---

<div
    class="max-w-[1120px] 2xl:max-w-[1350px] w-full flex flex-col gap-div_sm_gap my-div_sm_gap lg:gap-div_lg_gap lg:my-div_lg_gap mx-auto"
>
    <!-- first section -->
    <div
        class="flex flex-col md:flex-row w-full md:h-52 bg-primary
       px-6 sm:px-10 lg:px-24 py-6 md:py-0
       items-center justify-between rounded-3xl
       font-nunito text-white"
    >
        <!-- Item 1 -->
        <div class="flex flex-col items-center py-6 md:py-0">
            <h2 class="text-6xl md:text-6xl lg:text-7xl font-bold">70m</h2>
            <p class="mt-2 text-lg font-light font-handwriting">
                Total donation
            </p>
        </div>

        <!-- Divider -->
        <div class="w-20 h-px md:w-px md:h-16 bg-white/30"></div>

        <!-- Item 2 -->
        <div class="flex flex-col items-center py-6 md:py-0">
            <h2 class="text-6xl md:text-6xl lg:text-7xl font-bold">48k</h2>
            <p class="mt-2 text-lg font-light font-handwriting">
                Projects funded
            </p>
        </div>

        <!-- Divider -->
        <div class="w-20 h-px md:w-px md:h-16 bg-white/30"></div>

        <!-- Item 3 -->
        <div class="flex flex-col items-center py-6 md:py-0">
            <h2 class="text-6xl md:text-6xl lg:text-7xl font-bold">38%</h2>
            <p class="mt-2 text-lg font-light font-handwriting">
                Kids need help
            </p>
        </div>

        <!-- Divider -->
        <div class="w-20 h-px md:w-px md:h-16 bg-white/30"></div>

        <!-- Item 4 -->
        <div class="flex flex-col items-center py-6 md:py-0">
            <h2 class="text-6xl md:text-6xl lg:text-7xl font-bold">230</h2>
            <p class="mt-2 text-lg font-light font-handwriting">
                Our volunteers
            </p>
        </div>
    </div>

    <!-- second section -->
    <div class="w-full">
        <div class="mx-auto w-fit flex mb-8 lg:mb-12 flex-col justify-center">
            <p class="text-primary text-xl text-center font-handwriting">
                Help & donate us now
            </p>
            <h1
                class="font-nunito text-3xl md:text-5xl
                 text-heading font-bold text-center"
            >
                Our Partners and Supporters
            </h1>
        </div>
        <div
            class="grid grid-cols-2 gap-x-8 gap-y-6
               md:grid-cols-4 md:gap-10
               items-center"
        >
            <img src={partner_1} class="mx-auto h-10 object-contain" />
            <img src={partner_2} class="mx-auto h-10 object-contain" />
            <img src={partner_3} class="mx-auto h-10 object-contain" />
            <img src={partner_4} class="mx-auto h-10 object-contain" />
        </div>
    </div>
</div>
