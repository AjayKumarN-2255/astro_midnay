---
import { opportunities } from "../../data/involved/opp_data";
---

<div
    class="w-full bg-card lg:h-[715px] py-6 md:px-10 lg:py-0 rounded-[30px] flex flex-col justify-center items-center"
>
    <div class="mx-auto w-fit flex flex-col justify-center mb-6 lg:mb-12">
        <p class="text-primary text-xl text-center font-handwriting">
            Donate your time
        </p>
        <h1
            class="font-nunito text-3xl md:text-5xl text-heading font-bold text-center"
        >
            Volunteer Opportunities
        </h1>
    </div>
    <div class="max-w-[1040px] 2xl:max-w-[1200px] w-full mx-auto px-4 sm:px-0">
        <div class="grid grid-cols-1  lg:grid-cols-3 gap-6 lg:gap-10">
          {
            opportunities.map((opp) => (
              <div
                class="bg-white rounded-3xl
                       border border-secondary/40
                       p-6 sm:p-7 lg:p-8
                       flex flex-col gap-4 sm:gap-5
                       min-h-[360px] lg:h-[405px] 2xl:h-[375px]"
              >
                <!-- Icon -->
                <div
                  class="bg-primary h-14 w-14 sm:h-16 sm:w-16
                         flex items-center justify-center
                         rounded-full"
                >
                  <img
                    src="/src/assets/home/hand.png"
                    alt={opp.title}
                    class="w-6 h-6 sm:w-7 sm:h-7 object-contain"
                  />
                </div>
      
                <!-- Text -->
                <div class="space-y-1 sm:space-y-2">
                  <h3 class="text-lg sm:text-xl font-semibold text-heading">
                    {opp.title}
                  </h3>
      
                  <p class="text-paragraph leading-snug sm:leading-relaxed">
                    {opp.content}
                  </p>
                </div>
      
                <!-- Tag -->
                <div>
                  <span
                    class="inline-flex items-center gap-2
                           bg-gray-100 text-heading
                           px-4 py-2 rounded-xl
                           text-xs sm:text-sm font-medium"
                  >
                    <span class="h-4 w-4 bg-primary text-white flex justify-center items-center rounded-full">
                        
                    </span>
                    {opp.type}
                  </span>
                </div>
      
                <!-- Button -->
                <button
                  class="mt-auto
                         border border-secondary
                         rounded-full py-2.5 sm:py-3
                         text-sm sm:text-base
                         hover:bg-secondary hover:text-heading
                         transition"
                >
                  Apply Now
                </button>
              </div>
            ))
          }
        </div>
      </div>
</div>
